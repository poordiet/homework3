<p id="notice"><%= notice %></p>

<p>
<h2><strong> <%= @physician.name %></strong></h2>
</p>

<p>
 <h3> <strong>Specialty:</strong>
   <strong> <%= @physician.specialty %></strong></h3>
</p>

<hr>

<h3>Office Locations</h3>

<div class="location-table">
  <table class="blueTable">
    <tbody>
      <tr>
        <th> Street Address </th>
        <th> Zip Code </th>
        <th> Phone </th>
      </tr>
      <% @physician.offices.each do |office| %>
    <tr>
      <td> <%= office.street_address %></td>
      <td> <%= office.zip %></td>
      <td> <%= office.phone %></td>
    </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h3>Current Appointments</h3>

<div class="location-table">
  <table class="blueTable">
    <tbody>
    <tr>
      <th> Patient Name </th>
      <th> Date of Appointment </th>
    </tr>
    <% @physician.appointments.each do |appointment| %>
      <tr>
        <td> <%= appointment.patient.name %></td>
        <td> <%= appointment.visit.to_formatted_s(:long) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

